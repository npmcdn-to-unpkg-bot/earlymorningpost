<% if flash[:error] %>
  <div class="flash error round"><%= flash[:error] %></div>
<% end %>

<% if flash[:success] %>
  <div class="flash success round"><%= flash[:success] %></div>
<% end %>

<%if flash[:notice] %>
  <div class="flash notice round"><%= flash[:notice] %></div>
<% end %>

<%if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>