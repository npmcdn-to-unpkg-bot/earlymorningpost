        <li><%= link_to "TECHNOLOGY",      technology_path  %></li>
        <li><%= link_to "SCIENCE",         science_path   %></li>
        <li><%= link_to "ENTERTAINMENT",   entertainment_path   %></li>
      </ul>

      <% if admin? %>
        <!-- Right Nav Section -->
        <ul class="right">
          <li><%= link_to "Manage", news_index_path %></li>
           <li class="divider"></li>
          <li><%= link_to "Logout", byebye_path %></li>
        </ul>
      <% end %>
    </section>
  </nav> 
</div>
</div>
