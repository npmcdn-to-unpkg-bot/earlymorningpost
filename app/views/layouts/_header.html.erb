<div class="header-wrapper">
<div class="row collapse">
    <div class="logo large-2 offset-2 columns">
      <%= link_to logoHeader, root_path  %>
    </div>

    <div class="large-8 columns header-ad" align="right">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- Header-Ad-Leaderboard -->
      <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-8853705788192995"
           data-ad-slot="7882985666"></ins>
