<h1><%= @news.title %></h1>
<h4><%= @news.sub_heading %></h4>

<span class="news-date">
	<% if @news.created_at > 2.days.ago %>
		<%= time_ago_in_words(@news.created_at).upcase %> AGO
	<% else %>
		<%= @news.created_at.to_formatted_s(:long_ordinal) %> UTC
	<% end %>
</span>

<% if admin? %>
	<div class="admin-buttons">
		<%= link_to 'Edit', edit_news_path(@news), :class => 'button tiny' %>
		<%= link_to 'Delete', @news, :method => :delete,
									 :confirm => "Are you sure?",
									 :title => "Delete #{@news.title}",
									 :class => 'button tiny alert' %>
	</div>
<% end %>

<div class='news-image'>
	<%= image_tag @news.image_url if @news.image? %>
</div>

<%= simple_format @news.content %>